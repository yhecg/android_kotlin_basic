<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.juniorproject.ui.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.MainActivity">

        <Button
            android:id="@+id/btnServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_server"
            android:onClick="@{() -> activity.getServerData()}" />

        <Button
            android:id="@+id/btnRealmSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_realm_select"
            android:onClick="@{() -> activity.getRealmData()}" />

        <Button
            android:id="@+id/btnRealmDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_realm_delete"
            android:onClick="@{() -> activity.setRealmDataDelete()}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTotalUserInfoList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</layout>
















